# Environment name: development, test, production
NODE_ENV=development

# Database connection strings (PostgreSQL)
# Development database
DEV_DATABASE_URL=postgres://postgres:postgres@localhost:5432/kora_dev

# Test database
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5432/kora_test

# Production database
PROD_DATABASE_URL=postgres://user:password@host:5432/kora_prod

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key

# Server port
PORT=5000